{
  "name": "<%= name %>",
  "version": "0.1.0-0",
  "description": "<%= description %>",
  "main": "lib/index.js",
  "repository": "<%= repo %>",
  "author": {
    "name": "<%= git.name %>",
    "email": "<%= git.email %>"
  },
  "license": "MIT",
  "scripts": {
<% if (electron) { -%>
    "dist": "build",
    "pack": "build --dir",
<% } -%>
    "build": "babel src/ -d lib/ && esdoc",
    "it": "<%= call %>",
    "test": "xo && nyc ava"
  },
  "devDependencies": {
<% if (electron) { -%>
    "devtron": ">=1.4.0",
    "electron": ">=1.4.14",
    "electron-builder": ">=11.4.4",
<% } -%>
    "ava": ">=0.17.0",
    "babel-cli": ">=6.18.0",
    "babel-preset-env": ">=1.1.8",
    "esdoc": ">=0.5.2",
    "xo": ">=0.17.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
<% if (electron) { -%>
            "electron": 1.4
<% } else { -%>
            "node": true
<% } -%>
          }
        }
      ]
    ]
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "ignores": [
      "lib/**/*",
      "esdoc/**/*"
    ],
    "rules": {
      "import/named": "off"
    }
  },
  "esdoc": {
    "source": "./src",
    "destination": "./esdoc",
    "excludes": [],
    "access": [
      "public",
      "protected",
      "private"
    ]
  },
  "build": {
    "appId": "<%= name %>",
    "mac": {
      "category": "public.app-category.something"
    },
    "win": {}
  }
}
